#!/usr/bin/env bash
# qmd - Quick Markdown Search
set -euo pipefail

# Resolve symlinks to find script location
SOURCE="${BASH_SOURCE[0]}"
while [[ -L "$SOURCE" ]]; do
  DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"

# Commands needing sqlite-vec (vector search) must run under Node
# because bun:sqlite cannot load native extensions.
# All other commands run under Bun for faster startup.
case "${1:-}" in
  query|vsearch|embed|pull|status)
    exec node "$SCRIPT_DIR/dist/qmd.js" "$@" ;;
  *)
    exec bun "$SCRIPT_DIR/src/qmd.ts" "$@" ;;
esac
